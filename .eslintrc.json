{
  "extends": "airbnb",

  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },

  "plugins": ["vue", "html"],

  "rules": {
    "linebreak-style": "off",
    "import/no-extraneous-dependencies": "off",
    "no-restricted-syntax": "off",
    "func-names": "off",
    "arrow-parens": 0,
    "brace-style": 0,
    "comma-dangle": 0,
    "semi": ["error", "never"],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-mixed-operators": 0,
    "no-use-before-define": 0,
    "no-floating-decimal": 0,
    "class-methods-use-this": 0,
    "import/first": 0,
    "import/no-unresolved": 1,
    "import/extensions": 1,
    "vue/jsx-uses-vars": 2,
    "max-len": 0,
    "arrow-body-style": 0
  }
}
